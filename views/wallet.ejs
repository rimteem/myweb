<%- include('partials/header', { user: user, currentLocale: currentLocale }) %>
<section class="wallet-hero">
    <div class="container">
        <!-- Left Side: Text Content -->
        <div class="hero-text">
            <h1>YourCoin <span class="text-gold">Wallet:</span><br>Secure & Simple Crypto Storage</h1>
            <p>
                The official wallet for YourCoin. Buy, sell, trade, and store your digital assets with confidence. A non-custodial wallet that puts you in control. Get started now.
            </p>
            <div class="app-store-buttons">
                <a href="#" target="_blank" rel="noopener noreferrer">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/7/78/Google_Play_Store_badge_EN.svg" alt="Get it on Google Play">
                </a>
                <a href="#" target="_blank" rel="noopener noreferrer">
                    <img src="https://upload.wikimedia.org/wikipedia/commons/3/3c/Download_on_the_App_Store_Badge.svg" alt="Download on the App Store">
                </a>
            </div>
        </div>
        <!-- Right Side: App Mockup Image -->
        <div class="hero-image">
            <img src="/assets/wallet.jpg" alt="YourCoin wallet app interface shown on two mobile phones">
        </div>
    </div>
</section>
<style>
* { margin: 0; padding: 0; box-sizing: border-box; }
body {
    font-family: 'Poppins', 'Cairo', sans-serif;
    background-color: #2c2c2e;
    color: #f4f4f4;
}
.wallet-hero {
    display: flex;
    align-items: center;
    justify-content: center;
    min-height: 90vh;
    padding: 50px 20px;
}
.container {
    display: flex;
    align-items: center;
    gap: 40px;
    max-width: 1200px;
    width: 100%;
}
.hero-text { flex: 1; }
.hero-text h1 {
    font-size: 3.5rem;
    font-weight: 700;
    line-height: 1.2;
    margin-bottom: 20px;
}
.text-gold { color: #E0B861; }
.hero-text p {
    font-size: 1.1rem;
    color: #cccccc;
    max-width: 500px;
    margin-bottom: 30px;
}
.app-store-buttons {
    display: flex;
    gap: 15px;
}
.app-store-buttons a img {
    height: 55px;
    transition: transform 0.2s ease-in-out;
}
.app-store-buttons a:hover img {
    transform: scale(1.05);
}
.hero-image {
    flex: 1;
    display: flex;
    justify-content: center;
    align-items: center;
}
.hero-image img {
    max-width: 100%;
    height: auto;
    filter: drop-shadow(0 10px 25px rgba(0,0,0,0.3));
    border-radius: 18px;
    background: #fff;
}
@media (max-width: 768px) {
    .container {
        flex-direction: column;
        text-align: center;
    }
    .hero-text h1 { font-size: 2.1rem; }
    .hero-text p { max-width: 100%; margin-left: auto; margin-right: auto; }
    .app-store-buttons { justify-content: center; }
    .hero-image { margin-top: 40px; }
}
</style>

<!-- Coin Slider Section -->
<div class="coin-slider-container">
  <div class="coin-slider">
    <img src="/images/coins/BNB.png" alt="BNB">
    <img src="/images/coins/BUSD.png" alt="BUSD">
    <img src="/images/coins/CAKE.png" alt="CAKE">
    <img src="/images/coins/ETH.png" alt="ETH">
    <img src="/images/coins/SWAPO.png" alt="SWAPO">
    <img src="/images/coins/USDC.png" alt="USDC">
    <img src="/images/coins/USDT.png" alt="USDT">
  </div>
</div>
<script src="/js/coin-slider.js"></script>
<%- include('partials/footer') %>
