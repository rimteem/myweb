<%- include('partials/header', { user: user, currentLocale: currentLocale }) %>
<section class="trade-hero">
    <div class="trade-container">
        <div class="trade-info">
            <img src="/assets/rim1-token-logo.jpg" alt="Rimtoken Logo" class="trade-logo" />
            <h1 class="trade-title">RimToken <span class="text-gold">DEX</span></h1>
            <p class="trade-desc">
                Swap, Trade, Earn, and Explore the world of DeFi with RimToken DEX.
            </p>
            <div class="trade-social">
                <a href="https://t.me/rimtoken" target="_blank" class="trade-social-link" title="Telegram">
                  <img src="/assets/telegram.svg" alt="Telegram" style="width:32px;height:32px;filter: grayscale(0.2);vertical-align:middle;">
                </a>
                <a href="https://twitter.com/rimtoken" target="_blank" class="trade-social-link" title="Twitter">
                  <img src="/assets/twitter.svg" alt="Twitter" style="width:32px;height:32px;filter: grayscale(0.2);vertical-align:middle;">
                </a>
                <a href="mailto:info@rimtoken.com" class="trade-social-link" title="Email">
                  <img src="/assets/email.svg" alt="Email" style="width:32px;height:32px;filter: grayscale(0.2);vertical-align:middle;">
                </a>
                <a href="https://rimtoken.com" target="_blank" class="trade-social-link" title="Website">
                  <img src="/assets/rim1-token-logo.jpg" alt="Website" style="width:32px;height:32px;border-radius:50%;vertical-align:middle;">
                </a>
            </div>
        </div>
        <div class="trade-app">
            <iframe src="/SwapOcean-DEX-main/SwapOcean-DEX-main/index.html" style="width:100%;min-height:80vh;border:none;border-radius:18px;background:#181818;box-shadow:0 4px 32px #0003;" allowfullscreen></iframe>
        </div>
    </div>
</section>
<style>
.trade-hero {
    min-height: 90vh;
    background: linear-gradient(120deg, #0b1a33 60%, #D4AF37 100%);
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 40px 0 60px 0;
}
.trade-container {
    display: flex;
    flex-wrap: wrap;
    align-items: flex-start;
    gap: 40px;
    max-width: 1300px;
    width: 100%;
    margin: 0 auto;
}
.trade-info {
    flex: 1;
    min-width: 300px;
    max-width: 400px;
    background: #102444;
    border-radius: 24px;
    box-shadow: 0 8px 32px rgba(212,175,55,0.10);
    padding: 36px 32px;
    color: #FFD600;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: flex-start;
}
.trade-logo {
    width: 90px;
    height: 90px;
    border-radius: 50%;
    margin-bottom: 18px;
    box-shadow: 0 2px 12px #FFD60055;
    background: #fff;
}
.trade-title {
    color: #FFD600;
    font-size: 2.2rem;
    font-weight: 900;
    margin-bottom: 18px;
    letter-spacing: 1px;
    text-shadow: 0 2px 8px #0002;
}
.text-gold { color: #D4AF37; }
.trade-desc {
    color: #fff;
    font-size: 1.13rem;
    margin-bottom: 22px;
    line-height: 1.7;
    text-align: center;
}
.trade-social {
    display: flex;
    gap: 18px;
    margin-bottom: 10px;
}
.trade-social-link {
    color: #FFD600;
    font-size: 1.7rem;
    transition: color 0.2s;
}
.trade-social-link:hover {
    color: #D4AF37;
}
.trade-app {
    flex: 2;
    min-width: 350px;
    max-width: 850px;
    background: #181818;
    border-radius: 18px;
    box-shadow: 0 4px 32px #0003;
    padding: 0;
    overflow: hidden;
}
@media (max-width: 1100px) {
    .trade-container { flex-direction: column; align-items: center; }
    .trade-app { max-width: 100vw; }
}
</style>
<%- include('partials/footer') %>
