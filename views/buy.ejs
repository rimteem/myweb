<%- include('partials/header', { user: user, currentLocale: currentLocale }) %>
<div class="buy-container">
    <h1 class="buy-title">Buy RIM</h1>
    <form action="/account/buy" method="POST">
        <div class="input-group">
            <label for="amount">Amount:</label>
            <input type="number" id="amount" name="amount" required>
        </div>
        <button type="submit">Buy</button>
    </form>
</div>
<style>
.buy-container {
    max-width: 800px;
    margin: 40px auto;
    background: #0b1a33;
    border-radius: 20px;
    box-shadow: 0 10px 40px rgba(0,224,255,0.1);
    padding: 30px 40px;
    color: #e0e0e0;
    text-align: center;
}
.buy-title {
    color: #fff;
    font-weight: 700;
    margin-bottom: 30px;
}
.input-group {
    margin-bottom: 20px;
}
.input-group label {
    display: block;
    margin-bottom: 5px;
}
.input-group input {
    width: 100%;
    padding: 10px;
    border-radius: 5px;
    border: 1px solid #1a2a44;
    background: #102444;
    color: #e0e0e0;
}
button {
    background: #00e0ff;
    color: #0b1a33;
    padding: 12px 32px;
    border-radius: 10px;
    font-weight: 600;
    text-decoration: none;
    transition: background 0.2s, color 0.2s, transform 0.2s;
    box-shadow: 0 2px 8px rgba(0,224,255,0.08);
    border: none;
    cursor: pointer;
}
button:hover {
    background: #fff;
    color: #00e0ff;
    transform: translateY(-2px);
}
</style>
<%- include('partials/footer') %>